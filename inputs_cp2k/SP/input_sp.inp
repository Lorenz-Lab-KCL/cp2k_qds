@SET SYSNAME                mol

&GLOBAL
  PROJECT InP-ram
  PRINT_LEVEL LOW
  RUN_TYPE ENERGY 
  EXTENDED_FFT_LENGTHS .TRUE.
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/GTH_POTENTIALS
    #WFN_RESTART_FILE_NAME ./last.wfn
    &MGRID
      CUTOFF 450
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF 
     SCF_GUESS ATOMIC 
     EPS_SCF 1.0E-6 
     MAX_SCF 10000
     &OT ON
        CHOLESKY INVERSE	
        MINIMIZER  CG
     &END OT	
     &OUTER_SCF	
       MAX_SCF 75	
       EPS_SCF	1.0E-5
     &END OUTER_SCF	
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END 
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 65. 65. 65.
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ${SYSNAME}.xyz
    &END TOPOLOGY
    &KIND In
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q13
    &END KIND
    &KIND P
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    9.0E-03
    MAX_FORCE 9.0E-03
    RMS_DR    9.0E-03
    RMS_FORCE 9.0E-03
    MAX_ITER 200
    OPTIMIZER LBFGS
  &END GEO_OPT
&END MOTION
