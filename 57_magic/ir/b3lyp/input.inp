@SET SYSNAME                mol

&GLOBAL
  PROJECT InP-ram
  PRINT_LEVEL MEDIUM
  RUN_TYPE NORMAL_MODES
  EXTENDED_FFT_LENGTHS .TRUE.
&END GLOBAL

&FORCE_EVAL
  STRESS_TENSOR NUMERICAL
  METHOD Quickstep
 
  &DFT
    BASIS_SET_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /shared/ucl/apps/cp2k/7.1/gnu-4.9.2/cp2k-7.1/data/GTH_POTENTIALS
    CHARGE 0
    LSD
    &PRINT
      &MOMENTS
      &END
    &END
    &MGRID
      CUTOFF 450
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF 
     SCF_GUESS ATOMIC
     EPS_SCF 1.0E-7
     MAX_SCF 10000
     &OT ON
        CHOLESKY INVERSE	
        MINIMIZER  CG
     &END OT	
     &OUTER_SCF	
       MAX_SCF 75	
       EPS_SCF	1.0E-5
     &END OUTER_SCF	
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &LIBXC
          FUNCTIONAL XC_HYB_GGA_XC_B3LYP
        &END LIBXC
      &END XC_FUNCTIONAL
      &HF
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END
      &END
      ! In CP2K versions lower than v7, this part is required for TDDFT calculations
      &XC_GRID
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 65. 65. 65.
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ${SYSNAME}.xyz
    &END TOPOLOGY
    &KIND In
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q13
    &END KIND
    &KIND P
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&VIBRATIONAL_ANALYSIS
   NPROC_REP 10
   DX 0.001
   INTENSITIES
   THERMOCHEMISTRY
   &PRINT
     &PROGRAM_RUN_INFO ON
     &END
   &END
&END

